FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       dictionary;
    location    "system";
    object      gradSchemeBlendingDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

{
            // Optional helpers (same as hybridLsqGG)
            aspect         8.0;      // aspect ratio threshold
            chevron        off;         // enable chevron detection
            flat           0.2 4.0;    // NCF decay
            lsq           8.0;        // eigenvalue ratio threshold
	    smooth { weight 0.5; passes 1; }
}
